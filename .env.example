# Database Configuration
# For local development, use local PostgreSQL
# For production, use Neon serverless PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/family_story_archive"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# OpenAI API (Required for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_MAX_TOKENS="4000"

# AWS S3 Configuration (Required for file uploads)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
S3_BUCKET_NAME="family-story-archive-files"

# Inngest Configuration (Required for background jobs)
INNGEST_EVENT_KEY="your-inngest-event-key"
INNGEST_SIGNING_KEY="your-inngest-signing-key"

# Resend Configuration (Optional - for email notifications)
RESEND_API_KEY="re_your-resend-api-key"

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Optional: Development/Production flags
NODE_ENV="development"
